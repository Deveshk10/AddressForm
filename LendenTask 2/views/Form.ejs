<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Address Form</title>

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
    body{  
  background: linear-gradient(to right, #3498db, #2ecc71);
    }
  
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 90vh;
    }


    form {
        max-width: 400px;
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    input[type="text"] {
        width: 100%;
        padding: 10px;
        margin: 5px 0;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
    }
    input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        border-radius: 4px;
        margin-top: 10px;
    }
    .error-message {
        color: red;
        font-size: 0.8em;
    }
    label {
        font-weight: bold;
    }
    button {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        border-radius: 4px;
        margin-top: 10px;
    }
    button:hover {
        background-color: #0056b3;
    }

 
    form h1 {
        text-align: center;
        margin-bottom: 20px;
        color: #343a40;
    }
    form p {
        font-size: 0.8em;
        color: #6c757d;
        margin-bottom: 10px;
    }
    input[type="submit"]:hover {
        background-color: #3e8e41;
    }
    .error-message {
        display: block;
        margin-top: 5px;
    }


    input[type="text"]:focus {
        outline: none;
        box-shadow: 0 0 2px 1px rgba(0, 123, 255, 0.25);
    }
    button:hover {
        background-color: #0062cc;
    }
    button:focus {
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    /* Add some responsive styles */
    @media (max-width: 576px) {
        form {
            max-width: 100%;
        }
    }


</style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Address Book</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/addresses">View Addresses</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container">
    <form id="addressForm" action="/add" method="post" onsubmit="return validateForm()">
        <h1>Add a new address</h1>
        <p>All fields are required and zip code must be a 6-digit integer.</p>
        <label for="street">Street Address:</label>
        <input type="text" id="street" name="street" required>
        <span class="error-message" id="streetError"></span>

        <label for="city">City:</label>
        <input type="text" id="city" name="city" required>
        <span class="error-message" id="cityError"></span>

        <label for="state">State:</label>
        <input type="text" id="state" name="state" required>
        <span class="error-message" id="stateError"></span>

        <label for="zip">Zip Code:</label>
        <input type="text" id="zip" name="zip" required>
        <span class="error-message" id="zipError"></span>

        <button type="submit">Add Address</button>
    </form>
</div>

<script>
    function validateForm() {
        let street = document.getElementById("street").value;
        let city = document.getElementById("city").value;
        let state = document.getElementById("state").value;
        let zip = document.getElementById("zip").value;

        let valid = true;

        // Check if street is empty
        if (street === "") {
            document.getElementById("streetError").textContent = "Street is required.";
            valid = false;
        } else {
            document.getElementById("streetError").textContent = "";
        }

        // Check if city is empty
        if (city === "") {
            document.getElementById("cityError").textContent = "City is required.";
            valid = false;
        } else {
            document.getElementById("cityError").textContent = "";
        }

        // Check if state is empty
        if (state === "") {
            document.getElementById("stateError").textContent = "State is required.";
            valid = false;
        } else {
            document.getElementById("stateError").textContent = "";
        }

        // Check if zip is empty or not a 6-digit integer
        if (zip === "" || !/^\d{6}$/.test(zip)) {
            document.getElementById("zipError").textContent = "Zip code is required and must be a 6-digit integer.";
            valid = false;
        } else {
            document.getElementById("zipError").textContent = "";
        }

        return valid;
    }
</script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
